import { InferGetStaticPropsType } from 'next';
import { useTranslation } from 'next-i18next';
import Heading from '@components/Heading/Heading';
import Text from '@components/Text/Text';
import Page from '@layouts/Page';
import { baseStaticHandler } from '@util/getProps';

export const getStaticProps = baseStaticHandler({
  translationNamespaces: ['common'],
  meta: {
    title: '{{startCase this.name}}',
    description: 'Description',
  },
});
type Props = InferGetStaticPropsType<typeof getStaticProps>;

const {{pascalCase this.name}} = ({ meta }: Props) => {
  const { t } = useTranslation(['common']);

  return (
    <Page meta={meta}>
      <Heading as="h1">{{this.name}}</Heading>
      <Text size="large">{t('text')}</Text>
    </Page>
  );
};

export default {{pascalCase this.name}};
